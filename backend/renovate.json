{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "pip-compile": {
    "fileMatch": ["(^|/)requirements\\.txt$"],
    "lockFileMaintenance": {
      "enabled": true,
      "branchTopic": "pip-compile-refresh",
      "commitMessageAction": "Refresh pip-compile outputs"
    }
  },
  "pip_requirements": {
    "enabled": false
  },
  "pip_setup": {
    "enabled": false
  }
}
