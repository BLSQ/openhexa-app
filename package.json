{
  "name": "openhexa-frontend",
  "private": true,
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "dev": "npm-run-all --parallel next 'codegen -- --watch'",
    "next": "next dev",
    "build": "next build",
    "build:ci": "CI=1 next build",
    "start": "next start -p $PORT",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "lint": "next lint --dir src",
    "format": "prettier --write src",
    "prepare": "husky install",
    "schema": "npx get-graphql-schema http://localhost:8000/graphql/ > schema.graphql",
    "codegen": "find . -name *.generated.tsx -delete && graphql-codegen --config codegen.yml",
    "i18n:extract": "i18next",
    "ladle": "npx ladle serve"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "graphql": {
    "schema": "./schema.graphql"
  },
  "dependencies": {
    "@apollo/client": "^3.6.7",
    "@apollo/link-error": "^2.0.0-beta.3",
    "@graphql-codegen/near-operation-file-preset": "^2.2.14",
    "@headlessui/react": "^1.6.1",
    "@heroicons/react": "^1.0.6",
    "@ladle/react": "^2.0.2",
    "@popperjs/core": "^2.11.5",
    "@sentry/nextjs": "^7.1.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/line-clamp": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "@types/jest": "^28.1.1",
    "@types/lodash": "^4.14.182",
    "@types/lodash.isequal": "^4.5.6",
    "@types/node": "^17.0.42",
    "@types/react": "^17.0.40",
    "@types/uuid": "^8.3.4",
    "axios": "^0.27.2",
    "clsx": "^1.1.1",
    "deepmerge": "^4.2.2",
    "dropzone": "^6.0.0-beta.2",
    "eslint": "^8.17.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "filesize": "^9.0.2",
    "graphql": "^16.5.0",
    "husky": "^8.0.1",
    "isomorphic-unfetch": "^3.1.0",
    "lodash.isequal": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "luxon": "^2.4.0",
    "next": "^12.1.6",
    "next-i18next": "^11.0.0",
    "nextjs-progressbar": "^0.0.14",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-dropzone": "^14.2.1",
    "react-markdown": "^8.0.3",
    "react-popper": "^2.3.0",
    "react-popper-tooltip": "^4.4.1",
    "typescript": "^4.7.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "^2.5.1",
    "@graphql-codegen/typescript-operations": "^2.4.2",
    "@graphql-codegen/typescript-react-apollo": "^3.2.16",
    "@next/eslint-plugin-next": "^12.1.6",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^14.1.1",
    "@types/lodash.merge": "^4.6.7",
    "@types/luxon": "^2.3.2",
    "autoprefixer": "10.4.7",
    "babel-jest": "^28.1.1",
    "i18next-parser": "^6.5.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "tailwindcss": "^3.1.2"
  }
}
