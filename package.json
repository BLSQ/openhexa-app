{
  "name": "openhexa-frontend",
  "private": true,
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "watch": "npm-run-all --parallel dev 'codegen -- --watch'",
    "dev": "next dev",
    "build": "next build",
    "build:ci": "CI=1 next build",
    "start": "next start -p $PORT",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "lint": "next lint --dir src",
    "format": "prettier --write src",
    "prepare": "husky install",
    "schema": "npx get-graphql-schema http://localhost:8000/graphql/ > schema.graphql",
    "codegen": "graphql-codegen --config codegen.yml",
    "i18n:extract": "i18next"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "graphql": {
    "schema": "./schema.graphql"
  },
  "dependencies": {
    "@apollo/client": "^3.5.10",
    "@apollo/link-error": "^2.0.0-beta.3",
    "@headlessui/react": "^1.5.0",
    "@heroicons/react": "^1.0.6",
    "@popperjs/core": "^2.11.5",
    "@sentry/nextjs": "^6.19.6",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@tailwindcss/typography": "^0.5.2",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/lodash.isequal": "^4.5.5",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.40",
    "@types/uuid": "^8.3.4",
    "axios": "^0.26.1",
    "clsx": "^1.1.1",
    "deepmerge": "^4.2.2",
    "dropzone": "^6.0.0-beta.2",
    "eslint": "^8.13.0",
    "eslint-config-next": "^12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "filesize": "^8.0.7",
    "graphql": "^15.0.0",
    "husky": "^7.0.4",
    "isomorphic-unfetch": "^3.1.0",
    "lodash.isequal": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "luxon": "^2.3.1",
    "next": "^12.1.5",
    "next-i18next": "^11.0.0",
    "nextjs-progressbar": "^0.0.14",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-dropzone": "^12.0.5",
    "react-markdown": "^8.0.2",
    "react-popper": "^2.2.5",
    "react-popper-tooltip": "^4.3.1",
    "react-select": "^5.2.2",
    "typescript": "^4.6.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "^2.4.8",
    "@graphql-codegen/typescript-operations": "^2.3.5",
    "@graphql-codegen/typescript-react-apollo": "^3.2.11",
    "@next/eslint-plugin-next": "^12.1.5",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@types/lodash.merge": "^4.6.6",
    "@types/luxon": "^2.3.1",
    "autoprefixer": "^10.4.4",
    "babel-jest": "^27.5.1",
    "i18next-parser": "^6.3.0",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "2.6.2",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.24"
  }
}
